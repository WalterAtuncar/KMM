                {
                    <button id="btn-aprobar" class="btn btn-primary btn-sm"><i class="fa fa-check"></i> Aprobar</button>
                    <button class="btn btn-danger btn-sm" id="btn-rechazar"><i class="fa fa-remove"></i> Rechazar</button>
