@{
    ViewBag.Title = "Index";
}
<style>
    .select2.select2-container{
        width:100% !important;
    }
</style>
<h3 class="text-left text-primary">
    <i class="fa fa-file-text-o" style="color: #ee3224;"></i>
    <i class="fa fa-chevron-right" style="color: #ee3224;"></i> PROVEEDORES
</h3>

<br />

<div class="row">
    <div id="filtros">
        <div class="col-sm-4">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-4">RUC:</label>
                    <div class="col-sm-8">
                        <div class="input-group input-group-sm">
                            <span class="input-group-addon">
                                <input type="checkbox" id="chkRuc" />
                            </span>
                            <input type="text" id="txtRuc" class="form-control filtro" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Código SAP:</label>
                    <div class="col-sm-8">
                        <div class="input-group input-group-sm">
                            <span class="input-group-addon">
                                <input type="checkbox" id="chkCodigoSap" />
                            </span>
                            <input type="text" id="txtCodigoSap" class="form-control filtro" />
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-4" style="padding-right: 0;">Razón Social:</label>
                    <div class="col-sm-8">
                        <div class="input-group input-group-sm">
                            <span class="input-group-addon">
                                <input type="checkbox" id="chkRazonSocial" />
                            </span>
                            <input type="text" id="txtRazonSocial" class="form-control filtro" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <button id="btn-create" class="btn btn-primary btn-sm"><i class="fa fa-plus-circle"></i> Nuevo</button>
            <br />
            <br />
            <button id="btnBuscar_Proveedor" class="btn btn-danger btn-sm"><i class="fa fa-search"></i> Buscar</button>
        </div>
    </div>
</div>
<br />
<br />
<div class="row">
    <div class="col-sm-12">
        <div id="div-tbl-proveedores" class="table-responsive">
            <table id="jqGrid" class="table-gys-kom"></table>
            <div id="jqControls"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-proveedor" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

<div class="modal fade" id="modal-credenciales" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

<script>
    var url = {
        GetListProveedor: '@Url.Action("GetListProveedor", "Proveedor")',
        Registrar: '@Url.Action("Registrar", "Proveedor")',
        RegistrarPost: '@Url.Action("RegistrarPost", "Proveedor")',
        GetListMethod: '@Url.Action("GetListMethod", "Proveedor")',
        RegistrarMethodPost: '@Url.Action("RegistrarMethodPost", "Proveedor")',
        Credenciales: '@Url.Action("Credenciales", "Proveedor")',
        RegistrarCredenciales: '@Url.Action("RegistrarCredenciales", "Proveedor")'
    }
    $(document).ready(function () {
        $('#FechaInicioProveedorDatePicker').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            setDate: new Date()
        });

        $('.close-button').unbind();

        $('.close-button').click(function () {
            if ($('.datepicker').is(":visible")) {
                $(this).parent().datepicker('hide');
            } else {
                $(this).parent().datepicker('show');
            }
        });
    });
</script>

<link href="~/Content/plugins/jqGrid/css/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/plugins/jqGrid/css/ui.jqgrid.css" rel="stylesheet" />
<script src="~/Content/plugins/jqGrid/js/grid.locale-en.js"></script>
<script src="~/Content/plugins/jqGrid/js/jquery.jqGrid.min.js"></script>
<script src="~/scripts/proveedor/index.js"></script>