
<div>
    @Html.DropDownList("dllCentroCostoAfectoCodigoSap",
                       new SelectList(ViewBag.ListaCentrosCostos, "Codigo", "Descripcion"),
                       new { @id = "dllCentroCostoAfectoCodigoSap",
                           @class = "form-control select2" }
                      )
</div>

<script>
    $(function () {
        @{int count = new SelectList(ViewBag.ListaCentrosCostos).Count();}
        __countCentrosCostosDisponibles = @count;
        $('select[name="dllCentroCostoAfectoCodigoSap"]').select2({
            dropdownAutoWidth: true,
            width: '100%'
        });
        $("#dllCentroCostoAfectoCodigoSap").val(idUserCentroCostoSolicitud)
        $("#dllCentroCostoAfectoCodigoSap").trigger('change');

        $('#dllCentroCostoAfectoCodigoSap').change(function () {
            var ceco = $("#dllCentroCostoAfectoCodigoSap").val();
            if (cargado == 1) {
                getUsuarioCentroCosto(ceco);
            }
        });
        
    })
</script>