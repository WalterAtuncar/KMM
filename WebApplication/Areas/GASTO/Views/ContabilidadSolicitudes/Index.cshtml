                fn_BloquearPantalla();
              },
                success: function (data) {
                    $('#modal-solicitud-aprobacion').modal('hide');
                    $("#modal-resumen").modal({ show: true, backdrop: 'static', keyboard: true });
                    grillaresumen(data);
                    fn_DesbloquearPantalla();
              },
              complete: function () {
                 fn_DesbloquearPantalla();
                  document.getElementById("AprobarSolicitudButton").disabled = true;
              }
        });
    }

