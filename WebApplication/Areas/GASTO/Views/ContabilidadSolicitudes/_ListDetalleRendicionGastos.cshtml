    function IsValidaOrdenServicio(ordenServicio) {
        debugger;
        var retorno = true;
        var idSociedad = $('#hdfIdSociedad').val();
        if (ordenServicio != "-------") {
            $.ajax({
                url: url.ValidarOrdenServicio,
                type: 'POST',
                data: { ordenServicio: ordenServicio, sociedad: idSociedad },
                cache: false,
                async: false,
                beforeSend: function () {
                    fn_BloquearPantalla();
                },
                success: function (data) {

                    if (data.Success) {
                        fn_DesbloquearPantalla();
                    } else {
                        retorno = false;
                        fn_DesbloquearPantalla();
                    }
                },
                complete: function () {
                    fn_DesbloquearPantalla();
                }
            });
        }
        return retorno;
    }
