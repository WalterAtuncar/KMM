        var idtipo = parseInt($('#hdfIdTipo').val());
        var idsituacionservicio = parseInt($('#hdfIdSituacionServicio').val());

        if (idsolicitud != 0) {
            if (idtipo == 1) {
                //if (idsituacionservicio == 5 || idsituacionservicio == 8 || idsituacionservicio == 9 || idsituacionservicio == 10) {
