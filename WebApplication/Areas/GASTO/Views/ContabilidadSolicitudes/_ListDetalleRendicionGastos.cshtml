                    result += '<a href="javascript(0);" id="btn-eliminar-gasto" data-id ="' + cellvalue + '"  data-correl="' + rowObject.CORREL + '" class="fa fa-times-circle" title = "Eliminar"></a>' + '&nbsp;&nbsp;';
